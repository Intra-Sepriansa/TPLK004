# ===========================================
# TPLK004 ATTENDANCE SYSTEM - PRODUCTION ENV
# ===========================================

# Application
APP_NAME="TPLK004 Attendance System"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Jakarta
APP_DISPLAY_TIMEZONE=Asia/Jakarta

# Localization
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# ===========================================
# DATABASE - Pilih salah satu
# ===========================================

# Option 1: PostgreSQL (Railway, Render, Heroku)
DB_CONNECTION=pgsql
DB_HOST=your-db-host.com
DB_PORT=5432
DB_DATABASE=tplk004
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Option 2: MySQL (PlanetScale, Shared Hosting)
# DB_CONNECTION=mysql
# DB_HOST=your-db-host.com
# DB_PORT=3306
# DB_DATABASE=tplk004
# DB_USERNAME=your_username
# DB_PASSWORD=your_password
# MYSQL_ATTR_SSL_CA=/etc/ssl/certs/ca-certificates.crt

# ===========================================
# CACHING & SESSION
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

CACHE_STORE=database
QUEUE_CONNECTION=database

# ===========================================
# SECURITY
# ===========================================
BCRYPT_ROUNDS=12

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# ===========================================
# FILE STORAGE
# ===========================================
FILESYSTEM_DISK=local

# Untuk production dengan banyak file, gunakan S3:
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=tplk004-files

# ===========================================
# MAIL (untuk notifikasi)
# ===========================================

# Option 1: SMTP (Gmail, Mailtrap, dll)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tplk004.unpam.ac.id
MAIL_FROM_NAME="TPLK004 Attendance"

# Option 2: Mailgun (recommended for production)
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=your-domain.mailgun.org
# MAILGUN_SECRET=your-mailgun-key

# ===========================================
# GEOFENCING & LOCATION
# ===========================================
LOCATION_SAMPLE_COUNT=3
LOCATION_SAMPLE_WINDOW_SECONDS=20
LOCATION_SAMPLE_MAX_AGE_SECONDS=60
LOCATION_MAX_SPEED_MPS=35
LOCATION_MAX_JUMP_M=150
LOCATION_MAX_SPREAD_M=100

# IP Geolocation (optional)
IP_GEOLOCATION_ENABLED=true
IP_GEOLOCATION_URL=https://ipapi.co/{ip}/json/
IP_GEOLOCATION_MAX_DISTANCE_M=50000

# ===========================================
# AI FACE RECOGNITION (optional)
# ===========================================
YOLO_SERVICE_URL=http://your-yolo-service:9001
YOLO_API_KEY=your_api_key
YOLO_MIN_CONF=0.6
YOLO_TARGET_LABEL="INTRA SEPRIANSA"
YOLO_MAINTENANCE_MODE=false

# ===========================================
# VITE
# ===========================================
VITE_APP_NAME="${APP_NAME}"
